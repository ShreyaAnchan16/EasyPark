<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Adjust the corner radius as needed -->
            <solid android:color="@android:color/white"/>
        </shape>
    </item>

    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- Same radius as the previous shape -->
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="0dp" android:color="#000000"/>
            <padding android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp"/>
            <shadowColor android:color="#44000000"/>
        </shape>
    </item>
</layer-list>
