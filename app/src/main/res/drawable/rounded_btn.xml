<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rounded_button_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#44000000"/> <!-- Semi-transparent shadow color -->
            <corners android:radius="10dp"/> <!-- Same radius as button -->
        </shape>
    </item>

    <!-- Button background layer -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- Button color -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
